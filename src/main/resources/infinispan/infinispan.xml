<?xml version="1.0" encoding="UTF-8"?>
<infinispan xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="urn:infinispan:config:7.2 http://www.infinispan.org/schemas/infinispan-config-7.2.xsd"
        xmlns="urn:infinispan:config:7.2">
	
	<cache-container default-cache="Entando_Cache" jndi-name="java:jboss/infinispan/container/web">
		<jmx duplicate-domains="true" />
		<local-cache name="Entando_Cache">
			<eviction strategy="LIRS" max-entries="1000000" />
		</local-cache>
		<local-cache name="Entando_PageManager">
			<eviction strategy="LIRS" max-entries="10000" />
		</local-cache>
		<local-cache name="Entando_PageModelManager">
			<eviction strategy="LIRS" max-entries="1000" />
		</local-cache>
		<local-cache name="Entando_WidgetTypeManager">
			<eviction strategy="LIRS" max-entries="1000" />
		</local-cache>
		<local-cache name="Entando_CategoryManager">
			<eviction strategy="LIRS" max-entries="10000" />
		</local-cache>
		<local-cache name="Entando_ConfigManager">
			<eviction strategy="LIRS" max-entries="100" />
		</local-cache>
		<local-cache name="Entando_RoleManager">
			<eviction strategy="LIRS" max-entries="200" />
		</local-cache>
		<local-cache name="Entando_GroupManager">
			<eviction strategy="LIRS" max-entries="100" />
		</local-cache>
		<local-cache name="Entando_LangManager">
			<eviction strategy="LIRS" max-entries="10" />
		</local-cache>
		<local-cache name="Entando_CacheInfoManager">
			<eviction strategy="LIRS" max-entries="10" />
		</local-cache>
		<local-cache name="Entando_I18nManager">
			<eviction strategy="LIRS" max-entries="1000" />
		</local-cache>
	</cache-container>
	
</infinispan>
